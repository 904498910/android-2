<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#F0FFFFFF"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/closeWelcomeBut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|right"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_close" />

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="60dp"
                android:scaleType="centerInside"
                android:src="@drawable/ddg_red_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:text="@string/WelcomeHeader"
                android:textColor="#3a3e46"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:text="@string/WelcomeTitle"
                android:textColor="#585b61"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="35dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/WelcomeDescription"
                android:textColor="#b8bfcc"
                android:textSize="18sp" />

            <Button
                android:id="@+id/getStartedBut"
                android:layout_width="202dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_get_started"
                android:scaleType="centerInside"
                android:text="@string/GetStarted"
                android:textColor="#FFF" />
        </LinearLayout>
    </ScrollView>

</merge>